---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='flex h-screen flex-col items-center justify-center gap-y-4 overflow-x-hidden bg-[#242424] text-[#e3e3e3] antialiased'
  >
    <slot />
  </body>
</html>
